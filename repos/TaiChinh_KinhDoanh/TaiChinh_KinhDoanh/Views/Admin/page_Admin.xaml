<Page x:Class="TaiChinh_KinhDoanh.Views.Admin.page_Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaiChinh_KinhDoanh.Views.Admin" xmlns:Material="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="page_Admin">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.8,1" StartPoint="0,0">
                <GradientStop Color="Black" />
                <GradientStop Color="#FF242B3A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="250"
                >

            </ColumnDefinition>
            <ColumnDefinition
                Width="*"
                >

            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="30"
                >

            </RowDefinition>
            <RowDefinition
                Height="*"
                >

            </RowDefinition>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="1"
            HorizontalAlignment="Stretch"
           
           
            >
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.8,1" StartPoint="0.8,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF1A1029" Offset="0.8"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       Foreground="White"
                       TextWrapping="Wrap"
                       FontSize="20" FontFamily="Arial"
                       Opacity="0.7"
                       >
                <Bold>Admin</Bold>

            </TextBlock>

            <StackPanel
                Grid.Row="1"
                >

                <Button x:Name="button_Thong_tin_nguoi_dung"
                    Margin="10"
                    Height="30"
                    Width="200"
                    BorderThickness="2"
                    BorderBrush="White" Click="button_Thong_tin_nguoi_dung_Click"
                    >
                    <Grid
                        Width="175"
                        >
                        <Material:PackIcon 
                            Name="packicon_thong_tin_nguoi_dung"
                            Kind="Notebook"
                            Foreground="White"
                                           >

                        </Material:PackIcon>
                        <TextBlock
                            x:Name="textblock_thong_tin_nguoi_dung"
                            HorizontalAlignment="Right"
                            Foreground="White"
                            FontSize="16"
                            >
                            Thông tin người dùng
                        </TextBlock>
                    </Grid>

                </Button>


                <Button x:Name="button_Che_do_bao_mat"
                    Margin="10"
                    Height="30"
                    Width="200"
                    BorderThickness="2"
                    BorderBrush="White" Click="button_Che_do_bao_mat_Click"
                    >
                    <Grid
                        Width="175"
                        >
                        <Material:PackIcon 
                            Name="packicon_che_do_bao_mat"
                            Kind="Security"
                            Foreground="White"
                                           >

                        </Material:PackIcon>
                        <TextBlock
                            x:Name="textblock_che_do_bao_mat"
                            HorizontalAlignment="Right"
                            Foreground="White"
                            FontSize="16"
                            >
                            Chế độ bảo mật
                        </TextBlock>
                    </Grid>

                </Button>




            </StackPanel>
        </Grid>


        <Grid
            Grid.ColumnSpan="2" 
            
            >
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.7,0" StartPoint="0.5,0.2">
                    <GradientStop Color="MediumSlateBlue" Offset="1"/>
                    <GradientStop Color="#FF332D56" Offset="0.2"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Background="{x:Null}"
                >

                <Button
                    Width="25"
                    Height="25"
                    BorderBrush="{x:Null}" 
                    
                    
                    >
                    <Material:PackIcon 
                        Kind="WindowMinimize"
                        Foreground="White"
                                       >

                    </Material:PackIcon>
                </Button>

                <Button
                    Width="25"
                    Height="25"
                    BorderBrush="{x:Null}"
                    
                    
                    >
                    <Material:PackIcon 
                        Kind="WindowMaximize"
                        Foreground="White"
                                       >

                    </Material:PackIcon>
                </Button>

                <Button
                    Width="25"
                    Height="25"
                    BorderBrush="{x:Null}"
                    
                    
                    >
                    <Material:PackIcon 
                        Kind="Power"
                        Foreground="White"
                                       >

                    </Material:PackIcon>
                </Button>




            </StackPanel>



        </Grid>

        <Grid x:Name="grid_Add_UserControls_Admin"
            Grid.Column="1"
            Grid.Row="1"
            
            >
            <Image
                x:Name="image_Admin"
                Stretch="Uniform"
               Source="{Binding Source}" 
                ></Image>

        </Grid>
    </Grid>
</Page>
